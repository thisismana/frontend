{
    // http://www.jshint.com/docs/options/

    // Enforcing options
    "bitwise"  : true,
    "curly"    : true,
    "eqeqeq"   : true,
    "es3"      : true,
    "immed"    : true,
    "latedef"  : true,
    "newcap"   : true,
    "noarg"    : true,
    "noempty"  : true,
    "nonew"    : true,
    "quotmark" : "single",
    "unused"   : true,
    "undef"    : true,
    "trailing" : true,

    // Relaxing options
    "expr"     : true,
    "laxbreak" : true,
    "maxerr"   : 100,

    // Environments
    "browser"  : true,
    "jquery"   : true,

    "globals"   : {
        "require": false,
        "define" : false,
        "s"      : false
    },

    // catch keyword (native promises)
    "-W024": true
}
